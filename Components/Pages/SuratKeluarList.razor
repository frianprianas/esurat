@page "/surat-keluar"
@attribute [Authorize]
@using AplikasiSurat.Models
@using AplikasiSurat.Services
@inject MailService MailService
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Surat Keluar</PageTitle>

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-0">Surat Keluar</h2>
            <p class="text-muted small">Daftar semua surat yang keluar dari sistem</p>
        </div>
        <a href="surat-keluar/baru" class="btn btn-success" style="background: linear-gradient(135deg, #2dce89 0%, #2dcecc 100%) !important; border:none;">
            <i class="bi bi-plus-lg me-2"></i>Tambah Surat
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">Tgl Keluar</th>
                            <th>No. Surat</th>
                            <th>Penerima</th>
                            <th>Perihal</th>
                            <th>File</th>
                            <th class="text-end pe-4">Aksi</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (suratList == null)
                        {
                            <tr><td colspan="6" class="text-center py-5">
                                <div class="spinner-border text-success" role="status"></div>
                            </td></tr>
                        }
                        else if (!suratList.Any())
                        {
                            <tr><td colspan="6" class="text-center py-5 text-muted">Belum ada data surat keluar.</td></tr>
                        }
                        else
                        {
                            @foreach (var item in suratList)
                            {
                                <tr>
                                    <td class="ps-4">@item.TanggalKeluar.ToString("dd MMM yyyy")</td>
                                    <td><span class="badge bg-light text-dark border">@item.NomorSurat</span></td>
                                    <td>@item.Penerima</td>
                                    <td>@item.Perihal</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.FilePath))
                                        {
                                            <a href="@item.FilePath" target="_blank" class="btn btn-sm btn-outline-success">
                                                <i class="bi bi-file-earmark-text"></i> Unduh
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-muted small">-</span>
                                        }
                                    </td>
                                    <td class="text-end pe-4">
                                        <div class="btn-group">
                                            <a href="surat-keluar/edit/@item.Id" class="btn btn-sm btn-light text-success border" title="Edit">
                                                <i class="bi bi-pencil-square"></i>
                                            </a>
                                            <button @onclick="() => Delete(item.Id)" class="btn btn-sm btn-light text-danger border" title="Hapus">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@code {
    private List<SuratKeluar>? suratList;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        suratList = await MailService.GetSuratKeluarAsync();
    }

    private async Task Delete(int id)
    {
        await MailService.DeleteSuratKeluarAsync(id);
        await LoadData();
    }
}
