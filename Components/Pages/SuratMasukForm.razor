@page "/surat-masuk/baru"
@page "/surat-masuk/edit/{Id:int}"
@attribute [Authorize]
@using AplikasiSurat.Models
@using AplikasiSurat.Services
@inject MailService MailService
@inject FileService FileService
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>@(Id == 0 ? "Tambah" : "Edit") Surat Masuk</PageTitle>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-0">
                <div class="card-header bg-white py-3 border-bottom">
                    <h4 class="mb-0 fw-bold text-primary">
                        <i class="bi @(Id == 0 ? "bi-plus-circle" : "bi-pencil") me-2"></i>
                        @(Id == 0 ? "Tambah" : "Edit") Surat Masuk
                    </h4>
                </div>
                <div class="card-body p-4">
                    <EditForm Model="@Model" OnValidSubmit="HandleSubmit" FormName="SuratMasukForm">
                        <DataAnnotationsValidator />
                        
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Nomor Surat</label>
                                <InputText @bind-Value="Model.NomorSurat" class="form-control" placeholder="Contoh: 001/SMK/2024" />
                                <ValidationMessage For="() => Model.NomorSurat" class="text-danger small" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Tanggal Masuk</label>
                                <InputDate @bind-Value="Model.TanggalMasuk" class="form-control" />
                                <ValidationMessage For="() => Model.TanggalMasuk" class="text-danger small" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Pengirim</label>
                            <InputText @bind-Value="Model.Pengirim" class="form-control" placeholder="Nama instansi atau perorangan" />
                            <ValidationMessage For="() => Model.Pengirim" class="text-danger small" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Perihal</label>
                            <InputTextArea @bind-Value="Model.Perihal" class="form-control" rows="3" placeholder="Isi perihal surat..." />
                            <ValidationMessage For="() => Model.Perihal" class="text-danger small" />
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-semibold">Upload File (PDF/Gambar)</label>
                            <InputFile OnChange="HandleFileSelected" class="form-control" />
                            @if (!string.IsNullOrEmpty(Model.FilePath))
                            {
                                <div class="mt-2 p-2 bg-light border rounded d-flex align-items-center">
                                    <i class="bi bi-file-earmark-check text-success me-2 fs-5"></i>
                                    <div>
                                        <span class="d-block fw-semibold text-success">File Tersimpan</span>
                                        <small class="text-muted">Upload file baru jika ingin mengganti.</small>
                                    </div>
                                </div>
                            }
                        </div>

                        <div class="d-flex justify-content-end gap-2 pt-3 border-top">
                            <a href="surat-masuk" class="btn btn-light border px-4">Batal</a>
                            <button type="submit" class="btn btn-primary px-4 shadow-sm">
                                <i class="bi bi-save me-2"></i>Simpan
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public int Id { get; set; }

    public SuratMasuk Model { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        if (Id != 0)
        {
            var existing = await MailService.GetSuratMasukByIdAsync(Id);
            if (existing != null)
            {
                Model = existing;
            }
        }
    }

    private async Task HandleFileSelected(InputFileChangeEventArgs e)
    {
        var file = e.File;
        // Limit 10 MB
        if (file.Size > 10 * 1024 * 1024)
        {
            // Handle error - ideally show toast
            return;
        }

        var path = await FileService.UploadFileAsync(file);
        if (path != null)
        {
            Model.FilePath = path;
        }
    }

    private async Task HandleSubmit()
    {
        if (Id == 0)
        {
            await MailService.AddSuratMasukAsync(Model);
        }
        else
        {
            await MailService.UpdateSuratMasukAsync(Model);
        }
        Navigation.NavigateTo("surat-masuk");
    }
}
